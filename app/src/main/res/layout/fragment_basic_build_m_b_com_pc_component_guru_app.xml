<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".basicBuild.BasicBuildMBComPcComponentGuruApp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/com_pc_component_guru_app_loading_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/menuComPcComponentGuruApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="320dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/com_pc_component_guru_app_image_menu"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/starter_bui"
                android:layout_width="185.38dp"
                android:layout_height="44.31dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="8sp"
                android:text="@string/basic_build"
                android:textAppearance="@style/starter_bui"
                android:translationY="-4.01sp"
                app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
                app:layout_constraintStart_toStartOf="@+id/rectangle_1" />

            <ImageView
                android:id="@+id/backComPcComponentGuruApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="false"
                android:layout_marginStart="0dp"
                android:src="@drawable/image_back_com_pc_component_guru_app_loading_"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="202dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="115dp"
                android:background="@drawable/rectangle_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backComPcComponentGuruApp"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/motherboard"
            android:layout_width="168dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="10sp"
            android:text="@string/motherboard"
            android:textAppearance="@style/motherboard"
            android:textSize="28sp"
            android:translationY="-4.99sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/matx_asus_p"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="10sp"
            android:text="@string/matx_asus_p2"
            android:textAppearance="@style/matx_asus_p"
            android:textSize="28sp"
            android:translationY="-4.99sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/motherboard" />

        <TextView
            android:id="@+id/matx_gigaby"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="10sp"
            android:text="@string/matx_gigaby"
            android:textAppearance="@style/matx_gigaby"
            android:textSize="28sp"
            android:translationY="-4.99sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="202dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView16" />

        <TextView
            android:id="@+id/nextComPcComponentGuruApp"
            android:layout_width="185.38dp"
            android:layout_height="44.31dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="11sp"
            android:text="@string/next"
            android:textAppearance="@style/next"
            android:translationY="-5.35sp"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_2"
            app:layout_constraintStart_toStartOf="@+id/rectangle_2"
            app:layout_constraintTop_toTopOf="@+id/rectangle_2" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="346dp"
            android:layout_height="184dp"
            android:src="@drawable/bb_mother_com_pc_component_guru_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matx_asus_p" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="331dp"
            android:layout_height="191dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/bb_mother2_com_pc_component_guru_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matx_gigaby" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>